<html>
<head>
	<title>OnTact</title>
	<!-- STYLESHEETS -->

	<!-- css reset -->
	<!-- <link rel="stylesheet" type="text/css" href="/css/reset.css"> -->
	
	<!-- slick -->
	<!-- <link rel="stylesheet" type="text/css" href="http://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.css"/>
 -->
	<!-- google fonts -->
	<link href='http://fonts.googleapis.com/css?family=Lato:400,700|Oswald:400,300|Roboto' rel='stylesheet' type='text/css'>

	<!-- main css -->
	<link rel="stylesheet" type="text/css" href="/css/stylesheet.css">
	
	<!-- JAVASCRIPT FILES -->
	<!--  react.js  -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.12.2/react.js"></script>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/react/0.12.2/JSXTransformer.js"></script>

	<!--  jQuery  -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	 
	<!-- Showdown converter for react -->
	<script src="http://cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js"></script>
	
	<!-- Include js plugin -->
	<script type="text/javascript" src="http://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.min.js"></script>

</head>
<body>
	<nav>
		<h1 id="logo"><a href="/">OnTact</a></h1> 
		<% if session[:current_user] %>
			<img src="<%= @user.image %>">
			<form class="nav-form" action="/sessions" method="post">
				<input class="nav-form-bttn" type="hidden" name="_method" value="delete">
				<input class="nav-form-bttn" type="submit" value="Log out">
			</form>
		<% else %>
			<a href="/new"><button class="nav-form-bttn">Sign in</button></a>
			<form class="nav-form" action="/login" method="get">
				<input class="nav-form-bttn" type="submit" value="Log in">
			</form>
		<% end %>
	</nav>

	<section id="main" class="clearfix">
	
		<%= yield %>

	</section>

	<footer class="clearfix">
		<p>OnTact &copy; 2015</p>
	</footer>

</body>
</html>