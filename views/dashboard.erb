<!-- profile view template -->
<script type="text/javascript" id="profile-view-template">
	<div id="personal-card">
		<h2>Personal</h2>
		<div class="card-image">
			<img src=<%= @user.image %>>
		</div>
		<div class="card-info">
			<h3><%= @user.f_name %> <%= @user.l_name %></h3>
			<p><%= @user.headline %></p>

			<h4>Personal Phone</h4>
			<p><%= @user.personal_phone %></p>

			<h4>Work Phone</h4>
			<p><%= @user.professional_phone %></p>

			<h4>Personal Email</h4>
			<p><%= @user.personal_email %></p>

			<h4>Work Email</h4>
			<p><%= @user.professional_email %></p>

			<p><%= @user.position %> | <%= @user.company %> | <%= @user.website %></p>

		</div>
	</div>

	<div id="professional-card" class="clearfix">
		<h2>Professional</h2>
		<div class="card-image">
			<img src=<%= @user.image %>>
		</div>
		<div class="card-info">
			<h3><%= @user.f_name %> <%= @user.l_name %></h3>
			<p><%= @user.headline %></p>

			<h4>Work Phone</h4>
			<p><%= @user.professional_phone %></p>

			<h4>Work Email</h4>
			<p><%= @user.professional_email %></p>

			<p><%= @user.position %> | <%= @user.company %> | <%= @user.website %></p>
		</div>
	</div>

	<br>

	<div id="profile-edit-button">Edit<div>
</script>

<!-- profile-edit-template -->


<script type="text/javascript" id="profile-edit-template">
	<div id="profile-edit">
	<h2 class="form-h2">Edit Your OnTact Info</h2>
		<form method="POST" action="/users/<%= @user.id %>">
			<input type="hidden" name="_method" value="PUT"/>
			<label>First Name
				<input class="input-text" type="text" name="f_name" value=<%= @user.f_name %>>
			<label>
			<br>
			<label>Last Name
				<input class="input-text-edit" type="text" name="l_name" value=<%= @user.l_name %>>
			<label>
			<br>
			<label>Headline
				<input class="input-text-edit" type="text" name="headline" value=<%= @user.headline %>>
			<label>
			<br>
			<label>Avatar
				<br>
				<img src="/images/PandaAvatar.jpg">
				<br>
				<input type="radio" name="image" value="/images/PandaAvatar.jpg">Panda
				<br>
				<img src="/images/MonkeyAvatar.jpg">
				<br>
				<input type="radio" name="image" value="/images/MonkeyAvatar.jpg">Monkey
				<br>
				<img src="/images/LepAvatar.jpg">
				<br>
				<input type="radio" name="image" value="/images/LepAvatar.jpg">Leprechaun
				<br>
			</label>
			<br>
			<label>Personal Phone
				<input class="input-text-edit" type="text" name="personal_phone" value=<%= @user.personal_phone %>>
			<label>
			<br>
			<label>Work Phone
				<input class="input-text-edit" type="text" name="professional_phone" value=<%= @user.professional_phone %>>
			<label>
			<br>
			<label>Personal Email
				<input class="input-text-edit" type="text" name="personal_email" value=<%= @user.personal_email %>>
			<label>
			<br>
			<label>Work Email
				<input class="input-text-edit" type="text" name="professional_email" value=<%= @user.professional_email %>>
			<label>
			<br>
			<label>Position
				<input class="input-text-edit" type="text" name="position" value=<%= @user.position %>>
			<label>
			<br>
			<label>Company
				<input class="input-text-edit" type="text" name="company" value=<%= @user.company %>>
			<label>
			<br>
			<label>Website
				<input class="input-text-edit" type="text" name="website" value=<%= @user.website %>>
			<label>
			<br>
			<button class="input-submit" id="submit-edit">Submit Changes</button>
		</form>
	</div>
	<a href="/users/<%= @user.id %>"><button>Cancel</button></a>
</script>

<!-- VIEW Connections Template -->

<script id="connections-all-template" type="text/javascript">
	<h2>Your OnTacts</h2>

	<div id="scrolladex">
		<% @connected_users.each do |user| %>
			<div class="item connection-card" id="<%= user.username %>">
				<div class="card-image">
					<img src=<%= user.image %>>
				</div>
				<div class="card-info">
					<h3><%= user.f_name %> <%= user.l_name %></h3>
					<p><%= user.position %> <%= user.company %></p>
					<p><%= user.username %></p>
				</div>
			</div>
		<% end %>
	</div>
</script>


<!-- ADD Connection Template -->

<script id="add-connection-template" type="text/javascript">
	<div id="add-connection-div">
		<h2 class="form-h2">Add OnTact</h2>
		<h3>Know someone OnTact? Add him or her as a connection!</h3>
		<form>
			<input id="find-username" class="input-text" type="text" placeholder="enter an OnTact username"><br>
			<input id="find-connection-bttn" class="input-submit" type="submit" value="connect">
		</form>
	</div>
	<div id="invite-div">
		<h3>Invite someone to join OnTact!</h3>
		<p>Input an email address, and we will take care of the rest.</p>
		<form method="POST" action="/leads">
			<label>Email address:
				<input type="email" name="email" required>
			</label>
			<button>Send Invite</button>
		</form>
	</div>
</script>






